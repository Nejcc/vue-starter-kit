{
    "name": "nejcc/payment-gateway",
    "description": "A flexible multi-provider payment gateway for Laravel with support for Stripe, PayPal, Crypto, and more.",
    "keywords": ["laravel", "payment", "gateway", "stripe", "paypal", "crypto", "subscriptions"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nejc",
            "email": "nejc@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^11.0"
    },
    "suggest": {
        "stripe/stripe-php": "Required for Stripe gateway (^13.0|^14.0|^15.0)",
        "paypal/paypal-checkout-sdk": "Required for PayPal gateway (^1.0)",
        "coinbase/coinbase-commerce": "Required for Coinbase Crypto gateway"
    },
    "autoload": {
        "psr-4": {
            "Nejcc\\PaymentGateway\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nejcc\\PaymentGateway\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nejcc\\PaymentGateway\\PaymentGatewayServiceProvider"
            ],
            "aliases": {
                "Payment": "Nejcc\\PaymentGateway\\Facades\\Payment"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
